{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node", // Important for resolving modules
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true, // This will catch the 'implicitly has an 'any' type' errors
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"], // Tells TS to only look inside the src folder
  "exclude": ["node_modules"]
}